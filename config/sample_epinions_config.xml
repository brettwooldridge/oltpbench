<?xml version="1.0"?>
<parameters>

    <!-- Connection details -->
    <dbtype>sqlserver</dbtype>
    <driver>com.microsoft.sqlserver.jdbc.SQLServerDriver</driver>
    <DBUrl>jdbc:sqlserver://localhost:1433;databaseName=epinions;statementPoolingCacheSize=100;serverPreparedStatementDiscardThreshold=100;enablePrepareOnFirstPreparedStatementCall=true;</DBUrl>
    <username>sa</username>
    <password>&lt;YourStrong!Passw0rd></password>
    <isolation>TRANSACTION_READ_COMMITTED</isolation>
    
    <!-- Scalefactor in Epinions scales by *2000 the number of users-->
    <scalefactor>100</scalefactor>

    <!-- The workload -->
    <terminals>10</terminals>
    <works>
        <work>
          <time>120</time>
          <rate>10000</rate>
          <weights>10,10,10,10,10,10,10,10,20</weights>
        </work>
    </works>

    <!-- Epinions Procedures Declaration -->
    <transactiontypes>
        <transactiontype>
            <name>GetReviewItemById</name>
        </transactiontype>
        <transactiontype>
            <name>GetReviewsByUser</name>
        </transactiontype>
        <transactiontype>
            <name>GetAverageRatingByTrustedUser</name>
        </transactiontype>
        <transactiontype>
            <name>GetItemAverageRating</name>
        </transactiontype>
        <transactiontype>
            <name>GetItemReviewsByTrustedUser</name>
        </transactiontype>
        <transactiontype>
            <name>UpdateUserName</name>
        </transactiontype>
        <transactiontype>
            <name>UpdateItemTitle</name>
        </transactiontype>
        <transactiontype>
            <name>UpdateReviewRating</name>
        </transactiontype>
        <transactiontype>
            <name>UpdateTrustRating</name>
        </transactiontype>
    </transactiontypes>	
</parameters>
