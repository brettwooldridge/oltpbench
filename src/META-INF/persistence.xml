<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd" version="2.0">
  <persistence-unit name="Hibernate-MySQL-server">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <properties>
      <property name="javax.persistence.jdbc.driver" value="com.microsoft.sqlserver.jdbc.SQLServerDriver"/>
      <property name="javax.persistence.jdbc.url" value="jdbc:sqlserver://localhost:1433;databaseName=jpab"/>
      <property name="javax.persistence.jdbc.user" value="sa"/>
      <property name="javax.persistence.jdbc.password" value="YourStrong!Passw0rd"/>
      <property name="jpab.driver" value="com.microsoft.sqlserver.jdbc.SQLServerDriver"/>
      <property name="jpab.url" value="jdbc:sqlserver://localhost:1433;databaseName=jpab"/>
      <property name="jpab.user" value="sa"/>
      <property name="jpab.password" value="YourStrong!Passw0rd"/>
      <property name="hibernate.jdbc.batch_versioned_data" value="true" />
      <property name="hibernate.jdbc.batch_size" value="30" />
      <property name="hibernate.jdbc.fetch_size" value="100" />
      <property name="hibernate.id.new_generator_mappings" value="true" />
      <property name="hibernate.order_updates" value="true" />
      <property name="hibernate.dialect" value="org.hibernate.dialect.SQLServerDialect" />
      <property name="hibernate.connection.provider_class" value="org.hibernate.hikaricp.internal.HikariCPConnectionProvider" />
      <property name="hibernate.hikari.maximumPoolSize" value="10" />
      <property name="hibernate.hikari.jdbcUrl" value="jdbc:sqlserver://localhost:1433;databaseName=jpab" />
      <property name="hibernate.hikari.dataSource.user" value="sa" />
      <property name="hibernate.hikari.dataSource.password" value="YourStrong!Passw0rd" />
      <property name="javax.persistence.validation.mode" value="NONE" />
      <property name="hibernate.hbm2ddl.auto" value="update" />
      <property name="hibernate.bytecode.provider" value="javassist" />
      <property name="hibernate.bytecode.use_reflection_optimizer" value="true" />
      <property name="hibernate.connection.release_mode" value="on_close" />
    </properties>
  </persistence-unit>
</persistence>
